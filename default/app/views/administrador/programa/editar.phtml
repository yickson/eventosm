<script type="text/javascript">
  $(document).ready(function(){
    $("#editar").click(function(){
      var otro = tinyMCE.get('programa').getContent();
      //console.log(otro);
      $.ajax({
        type: "POST",
        cache: false,
        url: 'editar_programa',
        data: {"programa":otro},
        success: function(result){
          if(result === 1){
            swal({
                  type: 'success',
                  title: 'EdiciÃ³n correcta',
                  text: 'Ya lo estamos redirigiendo...',
                  timer: 3000,
                  onOpen: () => {
                    swal.showLoading()
                  }
                }).then((result) => {
                  if (result.dismiss === 'timer') {
                    window.location.href = "<?php echo PUBLIC_PATH.'administrador/programa/' ?>";
                  }
                });
          }else{
            swal(
                  'Error al editar',
                  'No se pudieron editar los datos, vuelva a intentar',
                  'error'
                );
          }
        }
      });
    })
  })
</script>
