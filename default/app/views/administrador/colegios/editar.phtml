<script type="text/javascript">
$(".guardar").click(function(){
  var id = $("#colegio").val();
  var nombre = $("#nombre").val();
  var rbd = $("#rbd").val();
  $.ajax({
    type: "POST",
    cache: false,
    url: "../editar_colegio",
    data: {"id":id, "nombre":nombre, "rbd":rbd },
    success: function(result){
      if(result === 1){
        swal({
           title: "Colegio editado correctamente!",
           text: "En breves momentos serÃ¡s redireccionado",
           type: "success",
           timer: 2500,
           onOpen: () => {
             swal.showLoading()
           }
         }).then((result) => {
           if (result.dismiss === 'timer') {
             window.location.href = "<?php echo PUBLIC_PATH.'administrador/colegios/' ?>";
           }
         });
      }else{
        swal(
              'Error al editar',
              'No se pudieron editar los datos del colegio, vuelva a intentar',
              'error'
            );
      }
    }
  })
});
</script>
